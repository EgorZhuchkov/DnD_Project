<UserControl x:Class="DnD_Project.UI.CharacterCreation.ClassChoice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnD_Project.UI.CharacterCreation"
             mc:Ignorable="d" 
            d:DesignHeight="700" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Выберите класс" FontSize="40" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" />
        <StackPanel Grid.Row="1">
            <Button x:Name="BarbarianButton" Content="Варвар" FontSize="30" MaxWidth="400" Margin="0 20 0 0"  Click="BarbarianButton_Click"/>
            <Button x:Name="RangerButton" Content="Следопыт" FontSize="30" MaxWidth="400" Margin="0 20 0 0" IsEnabled="False" Click="RangerButton_Click"/>
            <Button x:Name="WisardButton" Content="Волшебник" FontSize="30" MaxWidth="400" Margin="0 20 0 0" IsEnabled="False" Click="WisardButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
