<Window x:Class="DnD_Project.UI.CharacterNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_Project.UI"
        mc:Ignorable="d"
        Title="Создание персонажа" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Введите имя персонажа" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <TextBox Grid.Row="1" x:Name="NameTextBox" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100"/>
        <Button Grid.Row="2" x:Name="SubmitButton" Content="Продолжить" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5" Click="SubmitButton_Click"/>
    </Grid>
</Window>
